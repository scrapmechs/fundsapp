<UserControl x:Class="FundsApp.Views.BillControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
              d:DesignWidth="550">
    <WrapPanel Name="wpMain" Orientation="Horizontal">
        <TextBox Name ="txtBxBillName" HorizontalAlignment="Left" Height="auto" Text="Enter Bill Name" Width="198" BorderBrush="#FF467197" SelectionBrush="{x:Null}" BorderThickness="2"/>
        <Label Content="Bill Name"/>
        <TextBox Name ="txtBxBilBal" TextWrapping="Wrap" Text="$0.00" BorderBrush="#FF467197" SelectionBrush="{x:Null}" BorderThickness="2"/>
        <Label Content="Bill Balance"/>
        <TextBox x:Name ="txtBxPay" Text="$0.00" BorderBrush="#FF467197" SelectionBrush="{x:Null}" BorderThickness="2"/>
        <Label Content="Payment"/>
        <TextBox Name ="txtBxTotal" Text="$0.00" BorderBrush="#FF467197" SelectionBrush="{x:Null}" BorderThickness="2"/>
        <Label Content="Total"/>
    </WrapPanel>
</UserControl>
